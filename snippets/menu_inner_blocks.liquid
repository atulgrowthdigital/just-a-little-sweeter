{%- if block.settings.menu != blank -%}
  <div class="11 hdt-mega-menu hdt-mega-menu--inner hdt-absolute hdt-w-full" 
    >
    <div class="hdt-mega-menu__inner {% if block.settings.mega_width == 'custom' %} hdt-max-w-[{{ block.settings.mega_custom_width }}px] hdt-mx-auto{% endif %}">
      <div class="hdt-container">
        <div class="hdt-mega-menu-content">
          <div class="hdt-menu-inner-wrapper">
            <ul class="hdt-menu-list hdt-menu-inner-level-1" role="list">
              {%- for inner_link in block.settings.menu.links -%}
                <li class="hdt-menu-item{% if inner_link.links != blank %} hdt-has-children{% endif %}">
                  {%- if inner_link.links != blank -%}
                    <hdt-accordion class="hdt-contents" only-click-icon>
                      <details aria-expanded="false" class="hdt-menu-item hdt-flex hdt-justify-center hdt-flex-col hdt-has-children hdt-relative">
                        <summary data-url="{{ inner_link.url }}" class="hdt-flex hdt-justify-between hdt-align-center hdt-relative">
                          <span class="hdt-menu-link-text hdt-block">
                            <span class="hdt-block hdt-line-clamp">{{ inner_link.title }}</span>
                          </span>
                          <span class="hdt-inline-flex hdt-align-center hdt-justify-center hdt-top-0 hdt-right-0 hdt-bottom-0 hdt-absolute" accordion-icon>
                            <svg class="hdt-menu-item-arrow" xmlns="http://www.w3.org/2000/svg" width="10" height="7" viewBox="0 0 10 7" fill="none">
                              <path d="M10 1.24243L5 6.24243L-2.18557e-07 1.24243L0.8875 0.354932L5 4.46743L9.1125 0.354931L10 1.24243Z" fill="currentColor"/>
                            </svg>
                          </span>
                        </summary>
                        <div class="hdt-sub-menu hdt-sub-menu-child">
                          <ul class="hdt-menu-list hdt-menu-inner-level-2" role="list">
                            {%- for level2_link in inner_link.links -%}
                              <li class="hdt-menu-item{% if level2_link.links != blank %} hdt-has-children{% endif %}">
                                {%- if level2_link.links != blank -%}
                                  <hdt-accordion class="hdt-contents" only-click-icon>
                                    <details aria-expanded="false" class="hdt-menu-item hdt-flex hdt-justify-center hdt-flex-col hdt-has-children hdt-relative">
                                      <summary data-url="{{ level2_link.url }}" class="hdt-flex hdt-justify-between hdt-align-center hdt-relative">
                                        <span class="hdt-menu-link-text hdt-block">
                                          <span class="hdt-block hdt-line-clamp">{{ level2_link.title }}</span>
                                        </span>
                                        <span class="hdt-inline-flex hdt-align-center hdt-justify-center hdt-top-0 hdt-right-0 hdt-bottom-0 hdt-absolute" accordion-icon>
                                          <svg class="hdt-menu-item-arrow" xmlns="http://www.w3.org/2000/svg" width="10" height="7" viewBox="0 0 10 7" fill="none">
                                            <path d="M10 1.24243L5 6.24243L-2.18557e-07 1.24243L0.8875 0.354932L5 4.46743L9.1125 0.354931L10 1.24243Z" fill="currentColor"/>
                                          </svg>
                                        </span>
                                      </summary>
                                      <div class="hdt-sub-menu hdt-sub-menu-child">
                                        <ul class="hdt-menu-list hdt-menu-inner-level-3" role="list">
                                          {%- for level3_link in level2_link.links -%}
                                            <li class="hdt-menu-item{% if level3_link.links != blank %} hdt-has-children{% endif %}">
                                              {%- if level3_link.links != blank -%}
                                                <hdt-accordion class="hdt-contents" only-click-icon>
                                                  <details aria-expanded="false" class="hdt-menu-item hdt-flex hdt-justify-center hdt-flex-col hdt-has-children hdt-relative">
                                                    <summary data-url="{{ level3_link.url }}" class="hdt-flex hdt-justify-between hdt-align-center hdt-relative">
                                                      <span class="hdt-menu-link-text hdt-block">
                                                        <span class="hdt-block hdt-line-clamp">{{ level3_link.title }}</span>
                                                      </span>
                                                      <span class="hdt-inline-flex hdt-align-center hdt-justify-center hdt-top-0 hdt-right-0 hdt-bottom-0 hdt-absolute" accordion-icon>
                                                        <svg class="hdt-menu-item-arrow" xmlns="http://www.w3.org/2000/svg" width="10" height="7" viewBox="0 0 10 7" fill="none">
                                                          <path d="M10 1.24243L5 6.24243L-2.18557e-07 1.24243L0.8875 0.354932L5 4.46743L9.1125 0.354931L10 1.24243Z" fill="currentColor"/>
                                                        </svg>
                                                      </span>
                                                    </summary>
                                                    <div class="hdt-sub-menu hdt-sub-menu-child">
                                                      <ul class="hdt-menu-list hdt-menu-inner-level-4" role="list">
                                                        {%- for level4_link in level3_link.links -%}
                                                          <li class="hdt-menu-item{% if level4_link.links != blank %} hdt-has-children{% endif %}">
                                                            {%- if level4_link.links != blank -%}
                                                              <hdt-accordion class="hdt-contents" only-click-icon>
                                                                <details aria-expanded="false" class="hdt-menu-item hdt-flex hdt-justify-center hdt-flex-col hdt-has-children hdt-relative">
                                                                  <summary data-url="{{ level4_link.url }}" class="hdt-flex hdt-justify-between hdt-align-center hdt-relative">
                                                                    <span class="hdt-menu-link-text hdt-block">
                                                                      <span class="hdt-block hdt-line-clamp">{{ level4_link.title }}</span>
                                                                    </span>
                                                                    <span class="hdt-inline-flex hdt-align-center hdt-justify-center hdt-top-0 hdt-right-0 hdt-bottom-0 hdt-absolute" accordion-icon>
                                                                      <svg class="hdt-menu-item-arrow" xmlns="http://www.w3.org/2000/svg" width="10" height="7" viewBox="0 0 10 7" fill="none">
                                                                        <path d="M10 1.24243L5 6.24243L-2.18557e-07 1.24243L0.8875 0.354932L5 4.46743L9.1125 0.354931L10 1.24243Z" fill="currentColor"/>
                                                                      </svg>
                                                                    </span>
                                                                  </summary>
                                                                  <div class="hdt-sub-menu hdt-sub-menu-child">
                                                                    <ul class="hdt-menu-list hdt-menu-inner-level-5" role="list">
                                                                      {%- for level5_link in level4_link.links -%}
                                                                        <li class="hdt-menu-item">
                                                                          <a id="hdt-menu-{{ level5_link.handle }}" href="{{ level5_link.url }}" class="hdt-menu-link hdt-flex hdt-align-center hdt-justify-between hdt-relative hdt-text-base hdt-font-normal">
                                                                            <span class="hdt-menu-link-text hdt-block">
                                                                              <span class="hdt-block hdt-line-clamp">{{ level5_link.title }}</span>
                                                                            </span>
                                                                          </a>
                                                                        </li>
                                                                      {%- endfor -%}
                                                                    </ul>
                                                                  </div>
                                                                </details>
                                                              </hdt-accordion>
                                                            {%- else -%}
                                                              <a id="hdt-menu-{{ level4_link.handle }}" href="{{ level4_link.url }}" class="hdt-menu-link hdt-flex hdt-align-center hdt-justify-between hdt-relative hdt-text-base hdt-font-normal">
                                                                <span class="hdt-menu-link-text hdt-block">
                                                                  <span class="hdt-block hdt-line-clamp">{{ level4_link.title }}</span>
                                                                </span>
                                                              </a>
                                                            {%- endif -%}
                                                          </li>
                                                        {%- endfor -%}
                                                      </ul>
                                                    </div>
                                                  </details>
                                                </hdt-accordion>
                                              {%- else -%}
                                                <a id="hdt-menu-{{ level3_link.handle }}" href="{{ level3_link.url }}" class="hdt-menu-link hdt-flex hdt-align-center hdt-justify-between hdt-relative hdt-text-base hdt-font-normal">
                                                  <span class="hdt-menu-link-text hdt-block">
                                                    <span class="hdt-block hdt-line-clamp">{{ level3_link.title }}</span>
                                                  </span>
                                                </a>
                                              {%- endif -%}
                                            </li>
                                          {%- endfor -%}
                                        </ul>
                                      </div>
                                    </details>
                                  </hdt-accordion>
                                {%- else -%}
                                  <a id="hdt-menu-{{ level2_link.handle }}" href="{{ level2_link.url }}" class="hdt-menu-link hdt-flex hdt-align-center hdt-justify-between hdt-relative hdt-text-base hdt-font-normal">
                                    <span class="hdt-menu-link-text hdt-block">
                                      <span class="hdt-block hdt-line-clamp">{{ level2_link.title }}</span>
                                    </span>
                                  </a>
                                {%- endif -%}
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      </details>
                    </hdt-accordion>
                  {%- else -%}
                    <a id="hdt-menu-{{ inner_link.handle }}" href="{{ inner_link.url }}" class="hdt-menu-link hdt-flex hdt-align-center hdt-justify-between hdt-relative hdt-text-base hdt-font-normal">
                      <span class="hdt-menu-link-text hdt-block">
                        <span class="hdt-block hdt-line-clamp">{{ inner_link.title }}</span>
                      </span>
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endif -%}